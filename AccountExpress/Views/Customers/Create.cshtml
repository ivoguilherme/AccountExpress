@model AccountExpress.Models.Customers

@{
    ViewData["Title"] = "Cadastrar Clientes | ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div data-simplebar class="wrapper">
    <div class="container-fluid">
        <form asp-action="Create">
            <div class="row">
                <div class="col-md-12">
                    <div class="box">
                        <div class="title-wrapper">
                            <div class="row">
                                <div class="col-md-12">
                                    <h4>Cadastrar Cliente</h4>
                                </div>
                            </div>
                        </div>
                        <div class="content-box">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label for="Name">Nome</label>
                                        <input type="text" class="form-control" id="Name" name="Name">
                                        <small class="form-text text-muted">Informe o nome do cliente</small>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="Email">E-mail</label>
                                        <input type="email" class="form-control" id="Email" name="Email">
                                        <small class="form-text text-muted">Informe endereço de e-mail</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="DateOfBirth">Data de Nascimento</label>
                                        <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth">
                                        <small class="form-text text-muted">Informe a data de nascimento</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="CPF">CPF</label>
                                        <input type="text" class="form-control" id="CPF" name="CPF">
                                        <small class="form-text text-muted">Informe o número de CPF</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="RG">RG</label>
                                        <input type="text" class="form-control" id="RG" name="RG">
                                        <small class="form-text text-muted">Informe o número do RG</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="CNH">CNH</label>
                                        <input type="text" class="form-control" id="CNH" name="CNH">
                                        <small class="form-text text-muted">Informe o número da CNH</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="Phone">Celular</label>
                                        <input type="text" class="form-control" id="Phone" name="Phone">
                                        <small class="form-text text-muted">Informe o número de celular</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="Adress">Endereço</label>
                                        <input type="text" class="form-control" id="Adress" name="Adress">
                                        <small class="form-text text-muted">Informe o endereço</small>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label for="AdressNumber">Número</label>
                                        <input type="text" class="form-control" id="AdressNumber" name="AdressNumber">
                                        <small class="form-text text-muted">Informe o número</small>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="Complement">Complemento</label>
                                        <input type="text" class="form-control" id="Complement" name="Complement">
                                        <small class="form-text text-muted">Informe um complemento</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="District">Bairro</label>
                                        <input type="text" class="form-control" id="District" name="District">
                                        <small class="form-text text-muted">Informe o bairro</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="City">Cidade</label>
                                        <input type="text" class="form-control" id="City" name="City">
                                        <small class="form-text text-muted">Informe a cidade</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="State">Estado</label>
                                        <input type="text" id="State" class="form-control" name="State">
                                        <small class="form-text text-muted">Selecione o estado</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="CEP">CEP</label>
                                        <input type="text" class="form-control" id="CEP" name="CEP">
                                        <small class="form-text text-muted">Informe o CEP</small>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="box-btn">
                                        <a asp-action="Index" class="btn btn-dark"><i class="fas fa-undo-alt"></i> Voltar</a>
                                        <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Cadastrar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
