@model IEnumerable<AccountExpress.Models.Customers>

@{
    ViewData["Title"] = "Gerenciar Clientes | ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@

<div data-simplebar class="wrapper">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    @*<div class="title-box">
                            <span>Informações Básicas</span>
                        </div>*@
                    <div class="title-wrapper">
                        <div class="row">
                            <div class="col-md-10">
                                <h4>Administrar Clientes</h4>
                            </div>
                            <div class="col-md-2">
                                <div class="box-btn">
                                    <a asp-action="Create" class="btn btn-success"><i class="fas fa-user-plus"></i> Novo Cliente</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="content-box">


                        <table class="table tb-customers">
                            <thead>
                                <tr>
                                    <th>
                                        @*@Html.DisplayNameFor(model => model.Name)*@
                                        Nome
                                    </th>
                                    <th>
                                        @*@Html.DisplayNameFor(model => model.Email)*@
                                        E-mail
                                    </th>
                                    @*<th>
                                            @Html.DisplayNameFor(model => model.DateOfBirth)
                                        </th>
                                        *@
                                        <th>
                                            @Html.DisplayNameFor(model => model.CPF)
                                        </th>
                                        @*<th>
                                            @Html.DisplayNameFor(model => model.RG)
                                        </th>*@
                                    <th>
                                        @*@Html.DisplayNameFor(model => model.CNH)*@
                                        CNH
                                    </th>
                                    <th>
                                        @*@Html.DisplayNameFor(model => model.Phone)*@
                                        Telefone
                                    </th>
                                    @*<th>
                                            @Html.DisplayNameFor(model => model.Adress)
                                        </th>
                                        <th>
                                                @Html.DisplayNameFor(model => model.AdressNumber)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Complement)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.District)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.City)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.State)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.CEP)
                                            </th>*@
                                    <th>
                                        Ações
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        @*<td>
                                                @Html.DisplayFor(modelItem => item.DateOfBirth)
                                            </td>*@
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CPF)
                                            </td>
                                           @* <td>
                                                @Html.DisplayFor(modelItem => item.RG)
                                            </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CNH)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Phone)
                                        </td>
                                        @*<td>
                                                 @Html.DisplayFor(modelItem => item.Adress)
                                             </td>
                                            <td>
                                                 @Html.DisplayFor(modelItem => item.AdressNumber)
                                             </td>
                                             <td>
                                                 @Html.DisplayFor(modelItem => item.Complement)
                                             </td>
                                             <td>
                                                 @Html.DisplayFor(modelItem => item.District)
                                             </td>
                                             <td>
                                                 @Html.DisplayFor(modelItem => item.City)
                                             </td>
                                             <td>
                                                 @Html.DisplayFor(modelItem => item.State)
                                             </td>
                                             <td>
                                                 @Html.DisplayFor(modelItem => item.CEP)
                                             </td>*@
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-info"></i></a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-user-times"></i></a>

                                        </td>
                                    </tr>
                                }


                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>