@model IEnumerable<AccountExpress.Models.Customer>

@{
    ViewData["Title"] = "Gerenciar Clientes | ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="box">
        <div class="title-wrapper">
            <div class="row">
                <div class="col-md-10">
                    <h4>Administrar Clientes</h4>
                </div>
                <div class="col-md-2">
                    <div class="box-btn">
                        <a asp-action="Create" class="btn btn-success w-100"><i class="fas fa-plus"></i> Adicionar</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-box overflow-x">
            <table class="table tb-customers">
                <thead>
                    <tr>
                        <th>
                            Nome
                        </th>
                        <th>
                            E-mail
                        </th>
                        <th>
                            CPF
                        </th>
                        <th>
                            Telefone
                        </th>
                        <th>
                            Ações
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CPF)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-info"></i> Detalhes</a>

                            </td>
                        </tr>
                    }
            </table>
        </div>
    </div>
</div>