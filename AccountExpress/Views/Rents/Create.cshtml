@model AccountExpress.Models.Rent;

@{
    ViewData["Title"] = "Alugar | ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="box">
        <div class="title-wrapper">
            <div class="row">
                <div class="col-md-12">
                    <h4>Cadastrar Aluguel</h4>
                </div>
            </div>
        </div>
        <div class="content-box">
            <form asp-action="Create">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">Cliente</label>
                            <select asp-for="CustomerId" asp-items="@ViewBag.Customers" class="form-control"></select>
                            <small class="form-text text-muted">Selecione o cliente</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">Veículo</label>
                            <select asp-for="VehicleId" asp-items="@ViewBag.Vehicles" class="form-control"></select>
                            <small class="form-text text-muted">Selecione o veículo</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="PickupDate">Data da Retirada</label>
                            <input type="date" class="form-control" id="PickupDate" name="PickupDate">
                            <small class="form-text text-muted">Informe a data de retirada</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="ReturnDate">Data da Devolução</label>
                            <input type="date" class="form-control" id="ReturnDate" name="ReturnDate">
                            <small class="form-text text-muted">Informe a data de devolução</small>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="CPF">Tipo de Aluguel</label>
                            <select asp-for="TypeOfRent" asp-items="@ViewBag.RentType" asp-name class="form-control"></select>
                            <small class="form-text text-muted">Informe o tipo de aluguel</small>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="Daily">Diária</label>
                            <input type="text" class="form-control" id="Daily" name="Daily">
                            <small class="form-text text-muted">Informe o valor da diária</small>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="DelayRate">Taxa por Atraso</label>
                            <input type="text" class="form-control" id="DelayRate" name="DelayRate">
                            <small class="form-text text-muted">Informe a taxa</small>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="box-btn">
                            <a asp-action="Index" class="btn btn-dark"><i class="fas fa-undo-alt"></i> Voltar</a>
                            <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Cadastrar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>