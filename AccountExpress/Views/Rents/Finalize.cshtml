@model AccountExpress.Models.Rent;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="box">
        <div class="title-wrapper">
            <div class="row">
                <div class="col-md-12">
                    <h4>Excluir Cliente</h4>
                </div>
            </div>
        </div>
        <div class="content-box">
            <div class="row">
                <div class="col-md-8">
                    <p>Tem certeza de que deseja cancelar o aluguel do veículo <b>@Model.VehicleId</b>, feito pelo cliente <b>@Model.CustomerId</b>? </p>
                </div>
                <div class="col-md-4">
                    <div class="box-btn">
                        <form asp-action="Finalize">
                            <input type="hidden" asp-for="Id" />
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark"><i class="fas fa-undo-alt"></i> Voltar</a>
                            <button type="submit" class="btn btn-danger"><i class="fas fa-times"></i> Apagar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>