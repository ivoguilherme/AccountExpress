@model IEnumerable<AccountExpress.ViewModels.RentViewModel>

@{
    ViewData["Title"] = "Gerenciar Aluguéis | ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="box">
        <div class="title-wrapper">
            <div class="row">
                <div class="col-md-10">
                    <h4>Gerenciar Aluguéis</h4>
                </div>
                <div class="col-md-2">
                    <div class="box-btn">
                        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Adicionar</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-box">
            <table class="table tb-customers">
                <thead>
                    <tr>
                        <th>
                            Cliente
                        </th>
                        <th>
                            Veículo
                        </th>
                        <th>
                            Retirada
                        </th>
                        <th>
                            Devolução
                        </th>
                        <th>
                            Tipo de Aluguel
                        </th>
                        <th>
                            Ações
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Vehicle.Model)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PickupDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TypeOfRent)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-info"></i> Detalhes</a>

                            </td>
                        </tr>
                    }
            </table>
        </div>
    </div>
</div>