<!doctype html>
<html lang="pt-br">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/simplebar.css">
    <link rel="stylesheet" href="~/css/main.css">
    <title>@ViewData["Title"]AccountExpress</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div id="logo">
            <a class="navbar-brand" href="@Url.Action("Index", "Overview", null)">AccountExpress</a>
        </div>
    </nav>
    <aside>
        <div id="profile">
            <div id="img-profile">
                <img src="~/images/avatar.png" alt="Avatar">
            </div>
            <div id="name-profile">
                <span>Ivo Guilherme</span>
            </div>
        </div>
        <div data-simplebar class="navigation">
            <ul>
                <li>
                    <a href="@Url.Action("Index", "Overview", null)">
                        <span class="moldure">
                            <i class="far fa-chart-bar"></i>
                        </span>
                        Visão Geral
                    </a>
                </li>

                <li data-toggle="collapse" data-target="#facebook-nav" class="collapsed active">
                    <a href="#">
                        <span class="moldure"><i class="far fa-id-card"></i></span>
                        <span class="icon"><i class="fas fa-angle-left"></i></span>
                        Veículos
                    </a>
                </li>
                <ul class="sub-menu collapse" id="facebook-nav">
                    <li><a href="@Url.Action("VehicleRegistration", "Vehicles", null)">Cadastrar Veículos</a></li>
                    <li><a href="#">Gerenciar Veículos</a></li>
                </ul>

                <li data-toggle="collapse" data-target="#users-nav" class="collapsed active">
                    <a href="#">
                        <span class="moldure"><i class="far fa-user"></i></span>
                        <span class="icon"><i class="fas fa-angle-left"></i></span>
                        Clientes
                    </a>
                </li>
                <ul class="sub-menu collapse" id="users-nav">
                    <li><a href="@Url.Action("CustomerRegistration", "Customers", null)">Cadastrar Clientes</a></li>
                    <li><a href="@Url.Action("CustomerManager", "Customers", null)">Gerenciar Clientes</a></li>
                </ul>
                <li>
                    <a href="#">
                        <span class="moldure">
                            <i class="far fa-handshake"></i>
                        </span>
                        Alugar
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Settings", null)">
                        <span class="moldure">
                            <i class="far fa-sun"></i>
                        </span>
                        Configurações
                    </a>
                </li>
            </ul>
        </div>
        <div class="box-exit">
            <div id="exit">
                <a href="#"><span>Sair</span><i class="fas fa-power-off"></i></a>
            </div>
        </div>
    </aside>

    @RenderBody()

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/simplebar/simplebar.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>









