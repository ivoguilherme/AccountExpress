@model AccountExpress.Models.Vehicle;

@{
    ViewData["Title"] = "Veículos | ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="box">
        <div class="title-wrapper">
            <div class="row">
                <div class="col-md-12">
                    <h4>Cadastrar Veículo</h4>
                </div>
            </div>
        </div>
        <form asp-action="Create">
            <div class="content-box">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="Brands">Marca</label>
                            <select asp-for="Brands" asp-items="@ViewBag.VehicleBrands" class="form-control"></select>
                            <small class="form-text text-muted">Selecione a marca do veículo</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="Model">Modelo</label>
                            <input type="text" class="form-control" id="Model" name="Model">
                            <small class="form-text text-muted">Informe o modelo do veículo</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="Type">Tipo</label>
                            <select asp-for="Type" asp-items="@ViewBag.VehicleType" class="form-control"></select>
                            <small class="form-text text-muted">Selecione o tipo de veículo</small>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="Doors">Portas</label>
                            <select asp-for="Doors" asp-items="@ViewBag.VehicleDoors" class="form-control"></select>
                            <small class="form-text text-muted">Quantidade de Portas</small>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="Color">Cor</label>
                            <input type="text" id="Color" class="form-control" name="Color">
                            <small class="form-text text-muted">Selecione a Cor</small>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="Fuel">Combustível</label>
                            <select asp-for="Fuel" asp-items="@ViewBag.VehicleFuel" class="form-control"></select>
                            <small class="form-text text-muted">Selecione o Combustível</small>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="Exchange">Câmbio</label>
                            <select asp-for="Exchange" asp-items="@ViewBag.VehicleExchange" class="form-control"></select>
                            <small class="form-text text-muted">Selecione o Câmbio</small>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="Steering">Direção</label>
                            <select asp-for="Steering" asp-items="@ViewBag.VehicleSteering" class="form-control"></select>
                            <small class="form-text text-muted">Selecione a Direção</small>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="Manufacturing">Fabricação</label>
                            <select asp-for="Manufacturing" asp-items="@ViewBag.VehicleManufacturing" class="form-control"></select>
                            <small class="form-text text-muted">Ano de Fabricação</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="Mileage">Quilometragem</label>
                            <input type="text" class="form-control" id="Mileage" name="Mileage">
                            <small class="form-text text-muted">Informe o tipo de combustível</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="Plate">Placa</label>
                            <input type="text" class="form-control" id="Plate" name="Plate">
                            <small class="form-text text-muted">Informe a Placa</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Chassis">Chassi</label>
                            <input type="text" class="form-control" id="Chassis" name="Chassis">
                            <small class="form-text text-muted">Informe o número do Chassi do veículo</small>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="Observations">Observações</label>
                            <textarea class="form-control" id="Observations" name="Observations"></textarea>
                            <small class="form-text text-muted">Informe aqui observações relevantes sobre o veículo, como por exemplo: Trava Elétrica, Alarme, Som, etc.</small>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="box-btn">
                            <a asp-action="Index" class="btn btn-dark"><i class="fas fa-undo-alt"></i> Voltar</a>
                            <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Cadastrar</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>